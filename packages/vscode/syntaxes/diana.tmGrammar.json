{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Diana",
  "scopeName": "source.diana",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.diana",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.diana",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.diana",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.diana",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.diana",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.diana",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.diana",
          "match": "\\b[0-9]+\\.?[0-9]*\\b"
        },
        {
          "name": "constant.numeric.hex.diana",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.diana",
          "match": "\\b(if|else|while|for|break|continue|return|match|case|default)\\b"
        },
        {
          "name": "keyword.declaration.diana",
          "match": "\\b(let|const|var|fn|struct|enum|trait|impl|use|mod|pub)\\b"
        },
        {
          "name": "storage.type.diana",
          "match": "\\b(int|float|string|bool|array|object)\\b"
        },
        {
          "name": "constant.language.diana",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.diana",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.diana",
          "match": "=|\\+=|\\-=|\\*=|\\/=|%="
        },
        {
          "name": "keyword.operator.comparison.diana",
          "match": "==|!=|<|>|<=|>="
        },
        {
          "name": "keyword.operator.logical.diana",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.diana",
          "match": "\\+|\\-|\\*|\\/|%"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.diana",
          "match": ",|;"
        },
        {
          "name": "punctuation.definition.block.diana",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array.diana",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.parameters.diana",
          "match": "[()]"
        }
      ]
    }
  }
} 