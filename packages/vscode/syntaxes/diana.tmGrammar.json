{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Diana",
  "scopeName": "source.diana",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#keys"
    },
    {
      "include": "#list-markers"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.diana",
          "begin": ";",
          "end": "$",
          "patterns": [
            {
              "name": "punctuation.definition.comment.diana",
              "match": ";"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.diana",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.diana"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.diana"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.diana",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.diana",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.diana"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.diana"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.diana",
              "match": "\\\\[\"\\\\nrtbfav]"
            },
            {
              "name": "constant.character.escape.diana",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.scientific.diana",
          "match": "\\b-?[0-9]+\\.?[0-9]*[eE][+-]?[0-9]+\\b"
        },
        {
          "name": "constant.numeric.hex.diana",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.diana",
          "match": "\\b-?[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.diana",
          "match": "\\b-?[0-9]+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.diana",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.diana",
          "match": "\\bnull\\b"
        }
      ]
    },
    "keys": {
      "patterns": [
        {
          "name": "entity.name.tag.computed-key.diana",
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.computed-key.begin.diana"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.computed-key.end.diana"
            }
          },
          "patterns": [
            {
              "include": "#strings"
            },
            {
              "include": "#numbers"
            },
            {
              "include": "#constants"
            }
          ]
        },
        {
          "name": "entity.name.tag.quoted-key.diana",
          "match": "\"[^\"]*\"(?=\\s*:)"
        },
        {
          "name": "entity.name.tag.key-path.diana",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*(?=\\s*:)"
        }
      ]
    },
    "list-markers": {
      "patterns": [
        {
          "name": "punctuation.definition.list.item.diana",
          "match": "^\\s*\\*"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.key-value.diana",
          "match": ":"
        },
        {
          "name": "punctuation.separator.sequence.diana",
          "match": ","
        },
        {
          "name": "punctuation.definition.dictionary.begin.diana",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.dictionary.end.diana",
          "match": "\\}"
        },
        {
          "name": "punctuation.definition.array.begin.diana",
          "match": "\\["
        },
        {
          "name": "punctuation.definition.array.end.diana",
          "match": "\\]"
        },
        {
          "name": "punctuation.definition.group.begin.diana",
          "match": "\\("
        },
        {
          "name": "punctuation.definition.group.end.diana",
          "match": "\\)"
        }
      ]
    }
  }
} 